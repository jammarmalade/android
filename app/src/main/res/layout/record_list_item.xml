<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/record_account"
            android:textColor="@color/red"
            android:text="+0.25"
            android:textSize="20sp"
            android:layout_weight="5"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:textColor="@color/grey"
            android:text="2017-07-27 15:37"
            android:textSize="16sp"
            android:gravity="right"
            android:id="@+id/record_create_time"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp">
        <com.jam00.www.custom.flowtaglayout.FlowTagLayout
            android:id="@+id/record_tag_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:text="我是超长的内容内容内容内容内容内容内容内容内容内容内容内容"
            android:textColor="@color/black"
            android:id="@+id/record_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/record_show_image_area"
        android:visibility="gone">
        <com.jam00.www.custom.MyGridView
            android:id="@+id/image_mgridview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:columnWidth="100dp"
            android:horizontalSpacing="5dp"
            android:numColumns="3"
            android:verticalSpacing="10dp"
            android:stretchMode="columnWidth"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="2dp"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@drawable/ic_location_black"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/record_list_location"
            android:layout_marginLeft="5dp"
            android:textColor="@color/blue"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="中国·重庆市·南岸区·亚太路1号-附156号"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@drawable/split_line"
        android:layout_marginTop="10dp"/>
</LinearLayout>