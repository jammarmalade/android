<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.test.www.test">
    <!-- 应用图标 ic_launcher -->
    <!-- 应用名称 app_name -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!-- hardwareAccelerated 是否开启硬件加速，开启能让ListView、WebView滑动更加流畅，但会导致有些图片无法加载 -->
        <activity
            android:name="com.test.www.test.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:hardwareAccelerated="false">
            <intent-filter>
                <!-- 下面两句表示以  MainActivity 为主活动 （点击应用图标首先启动这个）-->
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- 第二个活动 -->
        <activity android:name=".SecondActivity" android:launchMode="singleInstance">

        </activity>
        <!-- 第三个活动 -->
        <activity android:name=".ThirdActivity" >

        </activity>
    </application>

</manifest>
